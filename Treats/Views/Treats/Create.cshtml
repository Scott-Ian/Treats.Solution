@{
  Layout = "_Layout";
}

@model Treats.Models.Treat

<h1>Create a new Treat:</h1>
<hr/>

@using (Html.BeginForm())
{
  @Html.Label("Name", "Name")<br>
  @Html.TextBoxFor(model => model.Name, new { @class="form-control"})<br>

  @Html.Label("Price", "Price")<br>
  @Html.TextBoxFor(model => model.Price, new { @type ="number", @class="form-control"})

  @Html.Label("Description", "Description")<br>
  @Html.TextAreaFor(model => model.Description, new { @class="form-control"})<br>

  <button type="submit" class="btn btn-default">Add New Treat</button><br>
}
