@{
  Layout = "_Layout";
}

@model Treats.Models.Flavor

<h1>Add a new Flavor:</h1>
<hr/>

@using (Html.BeginForm())
{
  @Html.Label("Name", "Name")<br>
  @Html.TextBoxFor(model => model.Name)<br>

  @Html.Label("Description", "Description")<br>
  @Html.TextAreaFor(model => model.Description)<br>

  <input type="submit" value="Add New Flavor" /><br>
}
